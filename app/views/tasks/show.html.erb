<div class="container">

  <h1> My tasks details </h1>

  <div class="details">
    <p> <%= @task.details %> </p>
  </div>

  <div class="completed">
    <% if @task.completed %>
    <i class="fas fa-check"></i> <p> this task is completed !</p>
    <% else %> <i class="far fa-square"></i> <p> this task isn't completed ! </p>

    <% end %>


  </div>

<%= link_to "back to list", tasks_path %>
</div>

